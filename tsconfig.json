{
  "compilerOptions": {
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./build",
    "allowJs": true,
    "target": "es2015",
    "lib": ["es2015"],
    "types": ["node"]
  },
  "include": ["./src/**/*", "./test/*.spec.ts", "index.ts"]
}
